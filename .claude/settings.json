{
  "permissions": {
    "allow": [
      "Read",
      "Grep",
      "Glob",
      "WebSearch",
      "WebFetch",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(python:*)",
      "Bash(source:*)",
      "Bash(echo:*)",
      "Bash(cat:*)",
      "Read(//private/tmp/**)",
      "Skill(literature-review)",
      "Skill(philosophy-research)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/setup-environment.sh"
          }
        ]
      }
    ]
  }
}