}

@article{christman2004relational,
  author = {Christman, John},
  title = {Relational Autonomy, Liberal Individualism, and the Social Constitution of Selves},
  journal = {Philosophical Studies},
  year = {2004},
  volume = {117},
  number = {1-2},
  pages = {143--164},
  doi = {10.1023/B:PHIL.0000014532.56866.5c},
  note = {
