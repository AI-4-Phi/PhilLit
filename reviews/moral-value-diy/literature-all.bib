@article{westlund2009rethinking,
  author = {Westlund, Andrea C.},
  title = {Rethinking Relational Autonomy},
  journal = {Hypatia},
  year = {2009},
  volume = {24},
  number = {4},
  pages = {26--49},
  doi = {10.1111/j.1527-2001.2009.01056.x},
  note = {
  CORE ARGUMENT: Westlund defends a constitutively relational account of autonomy against Christman's charge that such accounts are problematically perfectionist. She argues that autonomy is dialogical—it requires accountability to others in the sense that autonomous agents must be prepared to answer for themselves and their commitments. This dialogical structure is constitutive of autonomy rather than an external condition. However, this does not entail perfectionism about the good life because the dialogical condition is formal and content-neutral.

  RELEVANCE: Westlund's dialogical account suggests that autonomy requires responsiveness to others' perspectives and potential challenges, which complicates the DIY question. If autonomy is inherently dialogical, then completely independent action might actually be less autonomous than action coordinated with others. The paper helps clarify whether DIY activities are valuable because they enhance dialogical accountability or whether delegation can preserve such accountability.

  POSITION: Relational autonomy—dialogical account emphasizing accountability to others as constitutive of autonomy.
  },
  keywords = {autonomy, relational-autonomy, dialogical-autonomy, High},
  abstract = {John Christman has argued that constitutively relational accounts of autonomy, as defended by some feminist theorists, are problematically perfectionist about the human good. I argue that autonomy is constitutively relational, but not in a way that implies perfectionism: autonomy depends on a dialogical disposition to hold oneself answerable to external, critical perspectives on one's action-guiding commitments. This type of relationality carries no substantive value commitments, yet it does answer to core feminist concerns about autonomy.},
  abstract_source = {openalex},
}

@article{khader2020feminist,
  author = {Khader, Serene J.},
  title = {The Feminist Case Against Relational Autonomy},
  journal = {Journal of Moral Philosophy},
  year = {2020},
  volume = {17},
  number = {5},
  pages = {499--526},
  doi = {10.1163/17455243-20203085},
  note = {
  CORE ARGUMENT: Khader argues that socially constitutive conceptions of relational autonomy make idealized social conditions necessary for autonomy, which creates problems under nonideal conditions. Such accounts cannot serve key feminist roles: they ask oppressed agents to engage in self-harm to maintain autonomy, and they make oppressed agents appropriate objects of paternalism. Khader contends these accounts fail as both character ideals and paternalism-limiting concepts.

  RELEVANCE: Major internal critique of relational autonomy from a feminist perspective. If Khader is right, then emphasizing social conditions for autonomy could patronize those in oppressive situations who rely on themselves. This might vindicate DIY self-reliance under oppressive conditions—doing things yourself may preserve autonomy when social support is unreliable or controlling. Critical for avoiding over-romanticizing interdependence.

  POSITION: Feminist critique of socially constitutive relational autonomy as problematically paternalistic toward oppressed people.
  },
  keywords = {relational-autonomy, oppression, paternalism, High},
  abstract = {Feminist socially constitutive conceptions of autonomy make the presence of idealized social conditions necessary for autonomy. I argue that such conceptions cannot, when applied under nonideal conditions, play two key feminist theoretical roles for autonomy: the roles of anti-oppressive character ideal and paternalism-limiting concept. Instead, they prescribe action that reinforces oppression. Treated as character ideals, socially constitutive conceptions of autonomy ask agents living under nonideal ones to engage in self-harm or self-subordination. Moreover, conceptions of autonomy that make idealized social conditions a requirement of autonomy yield the conclusion that oppressed agents are appropriate objects of paternalism.},
  abstract_source = {s2}
}

@article{bratman2003planning,
  author = {Bratman, Michael E.},
  title = {A Desire of One's Own},
  journal = {The Journal of Philosophy},
  year = {2003},
  volume = {100},
  number = {5},
  pages = {221--242},
  doi = {10.5840/jphil2003100517},
  note = {
  CORE ARGUMENT: Bratman develops a planning theory account of autonomy that grounds self-governance in the agent's temporally extended planning agency. Autonomous desire and action require satisfaction of planning-theoretic demands for consistency, coherence, and stability in the agent's hierarchical system of plans and policies. Self-governing policies play a central coordinating role in the agent's life over time. Autonomy is a matter of the functioning of this planning system rather than mere reflective endorsement at a moment.

  RELEVANCE: Bratman's account extends Frankfurt's hierarchical model with emphasis on temporal extension and planning. For DIY ethics, the question is whether engaging in an activity oneself or delegating it affects the coherence and stability of one's planning system. Perhaps autonomous agents need to maintain certain higher-order policies about which domains of their life they will govern directly versus delegate, and DIY activities might be those that fall under policies of direct governance.

  POSITION: Hierarchical/planning theory—autonomy as coherent planning over time.
  },
  keywords = {autonomy, planning-theory, hierarchical-theory, Medium, INCOMPLETE, no-abstract}
}

@article{benson1994free,
  author = {Benson, Paul},
  title = {Free Agency and Self-Worth},
  journal = {The Journal of Philosophy},
