@article{kawall2024epistemic,
  author = {Kawall, Jason},
  title = {Epistemic Autonomy and the Shaping of Our Epistemic Lives},
  journal = {Social Epistemology},
  year = {2024},
  volume = {38},
  number = {3},
  pages = {374--391},
  doi = {10.1080/02691728.2024.2326840},
  note = {
  CORE ARGUMENT: Kawall develops an account of epistemic autonomy as a wide-ranging epistemic virtue that helps understand phenomena from method selection to epistemic oppression. Drawing on elements common to personal autonomy accounts (self-governance, authenticity, self-creation, independence), he argues that epistemic autonomy involves appropriately choosing subject matters, methods, sources, epistemic goals, and epistemic stances. Epistemic autonomy shapes most aspects of our epistemic lives and must ultimately reliably lead to valuable epistemic goods.

  RELEVANCE: While focused on epistemic rather than practical autonomy, Kawall's framework suggests that autonomy in any domain involves appropriate selection of methods and goals. For DIY ethics, this raises the question of whether practical autonomy similarly requires that agents have control over the methods they use to achieve their goals, not just the goals themselves. If practical autonomy involves choosing one's methods of action, this might support the value of DIY activities over delegation.

  POSITION: Epistemic autonomy—domain-specific autonomy involves control over methods and frameworks.
  },
  keywords = {epistemic-autonomy, self-governance, methods, Low},
  abstract = {ABSTRACT I present an account of epistemic autonomy as a distinctively wide-ranging epistemic virtue, one that helps us to understand a range of phenomena that might otherwise seem quite disparate – from the appropriate selection of epistemic methods, stances and topics of inquiry, to the harms of epistemic oppression, gaslighting and related phenomena. The account draws on four elements commonly incorporated into accounts of personal autonomy: (i) self-governance, (ii) authenticity, (iii) self-creation and (iv) independence. I further argue that for a distinctively epistemic virtue of autonomy; the above elements must ultimately reliably lead to valuable epistemic goods (for the agent herself and others). I then turn to the domains or ways in which epistemic autonomy so understood, can be made manifest. I suggest that epistemic autonomy is a virtue that allows us to appropriately choose (i) subject matters and areas of inquiry, (ii) methods, sources, and processes of belief formation, (iii) epistemic goals and (iv) epistemic stances or frameworks. So understood, epistemic autonomy has a role to play in shaping most every aspect of our epistemic lives.},
  abstract_source = {s2},
}

@article{mhlambi2023decolonizing,
  author = {Mhlambi, S{\'a}b{\"{e}}lo and Tiribelli, Simona},
  title = {Decolonizing AI Ethics: Relational Autonomy as a Means to Counter AI Harms},
  journal = {Topoi},
  year = {2023},
  volume = {42},
  number = {3},
  pages = {641--658},
  doi = {10.1007/s11245-022-09874-2},
  note = {
  CORE ARGUMENT: Mhlambi and Tiribelli argue that mainstream AI ethics frameworks center a liberal notion of autonomy as rational self-determination that fails to address harms particularly affecting marginalized populations. They propose a relational turn in AI ethics drawing on relational autonomy theories and Ubuntu ethics, emphasizing interdependence and collective well-being. The relational approach better captures how AI systems can violate autonomy through effects on relationships and social structures, not just individual decision-making.

  RELEVANCE: This paper extends relational autonomy to the context of AI and technological systems. For DIY ethics in the age of AI assistants and automation, it raises questions about whether using AI tools constitutes a form of delegation that affects relational autonomy differently than delegation to human agents. The paper suggests that autonomy in technological contexts cannot be understood purely individualistically but must consider how tools mediate relationships and social structures.

  POSITION: Relational autonomy applied to AI ethics—technology affects autonomy through social relationships.
  },
  keywords = {relational-autonomy, AI-ethics, technology, Low},
  abstract = {Many popular artificial intelligence (AI) ethics frameworks center the principle of autonomy as necessary in order to mitigate the harms that might result from the use of AI within society. These harms often disproportionately affect the most marginalized within society. In this paper, we argue that the principle of autonomy, as currently formalized in AI ethics, is itself flawed, as it expresses only a mainstream mainly liberal notion of autonomy as rational self-determination, derived from Western traditional philosophy. In particular, we claim that the adherence to such principle, as currently formalized, does not only fail to address many ways in which people’s autonomy can be violated, but also to grasp a broader range of AI-empowered harms profoundly tied to the legacy of colonization, and which particularly affect the already marginalized and most vulnerable on a global scale. To counter such a phenomenon, we advocate for the need of a relational turn in AI ethics, starting from a relational rethinking of the AI ethics principle of autonomy that we propose by drawing on theories on relational autonomy developed both in moral philosophy and Ubuntu ethics.},
  abstract_source = {s2},
}

@article{swaine2020idea,
  author = {Swaine, Lucas},
  title = {The Idea of Personal Autonomy},
