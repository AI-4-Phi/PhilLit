  sep_context = {SEP (Authenticity article) presents Ferrara (1998) as diagnosing a profound transition affecting "the bedrock of the symbolic network through which we relate to reality." Ferrara reformulates well-being (eudaimonia) as the normative ideal of authenticity, grounding a new universal validity "linked with the model of exemplary uniqueness or enlightening singularity." Authenticity is characterized by "self-congruency" of identity, providing universal validity based on the exemplary rather than the generalizable.}
}

@misc{varga2011authenticity,
  author = {Varga, Somogy},
  title = {Authenticity as an Ethical Ideal},
  year = {2011},
  publisher = {Routledge},
  note = {
  CORE ARGUMENT: Defends authenticity as ethical ideal while critiquing its co-optation by contemporary capitalism (through self-help literature and management practices). Argues authenticity emerges through "alternativeless choices"—existential decisions where we discover and constitute ourselves simultaneously. These commitments have internal structure that commits us beyond our immediate preferences to publicly intelligible values, constraining our practical deliberation.

  RELEVANCE: Analyzes the phenomenology of authentic choice and its connection to values beyond preference. For DIY ethics, Varga's account of "alternativeless choices" suggests that doing things yourself matters most when it involves self-constitution through commitment, not just executing pre-existing preferences. The emphasis on being committed to publicly intelligible values implies that authentic DIY action must connect to shared frameworks of meaning, not pure self-invention.

  POSITION: Contemporary defense of authenticity emphasizing existential commitment and value-constraints.
  },
  keywords = {authenticity-ethics, existential-choice, commitment, Medium},
  abstract = {It has recently been pointed out that the cloudiness of the concept of authenticity as well as inflated ideologies of the 'true self' provide good reasons to criticize theories and ideals of authenticity. Nevertheless, there are also good reasons to defend an ethical ideal of authenticity, not least because of its critical and oppositional force, which is directed against experiences of self-abandonment and self-alienation. I will argue for an elaborated ethical ideal of authenticity: the ambitious ideal of a continuous self-reflective process of 'self-authentication'. For this purpose, the ideal of being authentic in expressing and unfolding one's individual personality and characteristics will be combined with the ideal of being 'an authentic person' - whereby 'a person' is to be understood in a Kantian sense as an autonomous person who is (at least potentially) reasonable and morally responsible},
  abstract_source = {core},
}

@article{zawadzki2020pattern,
  author = {Zawadzki, Przemysław},
  title = {Pattern Theory of Self and Situating Moral Aspects: The Need to Include Authenticity, Autonomy and Responsibility in Understanding the Effects of Deep Brain Stimulation},
  journal = {Phenomenology and the Cognitive Sciences},
  year = {2020},
  volume = {21},
  pages = {559--582},
  doi = {10.1007/s11097-020-09708-9},
  note = {
  CORE ARGUMENT: Argues Pattern Theory of Self (PTS) provides best framework for understanding DBS impacts on selfhood but requires extension to include moral aspects: authenticity, autonomy, and responsibility. These aspects serve both as evaluative lenses and as products of self-pattern dynamics. How we define authenticity determines our concept of autonomy, which determines how we think about responsibility—revealing complex interdependencies.

