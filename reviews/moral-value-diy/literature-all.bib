  abstract_source = {s2},
aims.},
}

@article{wheeler2018reappearing,
  author = {Wheeler, Michael},
  title = {The reappearing tool: transparency, smart technology, and the extended mind},
  journal = {AI \& Society},
  year = {2018},
  volume = {34},
  number = {4},
  pages = {857--866},
  doi = {10.1007/s00146-018-0824-x},
  note = {
  CORE ARGUMENT: Traditional extended mind theory assumes tool transparency (expert tool use involves phenomenological disappearance of the tool). However, smart technologies with AI-based applications resist transparency—they "reappear" in conscious experience because their autonomous behavior requires monitoring. This challenges whether contemporary smart technology can extend the mind in the classical sense and raises questions about design goals for AI systems.

  RELEVANCE: Identifies how AI and smart technology differ from traditional tools regarding extended cognition. If smart tools inherently resist transparency, this affects whether using AI counts as extending the self versus delegating to an external agent. The "reappearing tool" phenomenon suggests AI-assisted action differs phenomenologically and possibly morally from traditional tool use. Relevant to whether moral distinctions between human delegation and AI delegation track differences in transparency or integration.

  POSITION: Extended mind theorist questioning how smart technology fits the extended mind framework.
  },
  keywords = {extended-mind, smart-technology, transparency, AI, tool-use, Medium},
  abstract = {Some thinkers have claimed that expert performance with technology is characterized by a kind of disappearance of that technology from conscious experience, that is, by the transparency of the tools and equipment through which we sense and manipulate the world. This is a claim that may be traced to phenomenological philosophers such as Heidegger and Merleau-Ponty, but it has been influential in user interface design where the transparency of technology has often been adopted as a mark of good design. Moreover, in the philosophy of cognitive science, such transparency has been advanced as necessary for extended cognition (the situation in which the technology with which we couple genuinely counts as a constitutive part of our cognitive machinery, along with our brains). By reflecting on concrete examples of our contemporary engagement with technology, I shall argue that the epistemic challenges posed by smart artefacts (those that come equipped with artificial-intelligence-based applications) should prompt a reassessment of the drive for transparency in the design of some cases of technology-involving cognition. This has consequences for the place of extended minds in the contemporary technological context.},
  abstract_source = {s2},
}

@article{turner2022neuromedia,
  author = {Turner, Cody},
  title = {Neuromedia, cognitive offloading, and intellectual perseverance},
  journal = {Synthese},
  year = {2022},
  volume = {200},
  number = {2},
  doi = {10.1007/s11229-022-03472-w},
  note = {
  CORE ARGUMENT: Brain-computer interfaces (neuromedia) that enable cognitive offloading threaten intellectual perseverance—the virtue of mentally persisting through challenges toward intellectual goals. Excessive offloading incentivized by neuromedia undermines virtue development by removing the challenges that cultivate perseverance. However, responsible use might reallocate perseverance to more valuable intellectual pursuits by eliminating menial cognitive labor.

  RELEVANCE: Extends virtue epistemology critique of offloading to future technologies. Identifies intellectual perseverance as specifically threatened by cognitive delegation, suggesting that doing things yourself (cognitively) cultivates virtues that delegation erodes. The conditional defense (offloading acceptable if redirecting perseverance) relates to DIY questions about whether delegation's value depends on what one does with freed cognitive resources. Challenges simple efficiency-based defenses of technological augmentation.

  POSITION: Virtue epistemology critic of excessive offloading, with qualified defense of responsible use.
  },
  keywords = {cognitive-offloading, virtue-epistemology, brain-computer-interface, intellectual-virtue, Medium},
  abstract = {This paper engages in what might be called anticipatory virtue epistemology, as it anticipates some virtue epistemological risks related to a near-future version of brain-computer interface technology that Michael Lynch (2014) calls 'neuromedia.' I analyze how neuromedia is poised to negatively affect the intellectual character of agents, focusing specifically on the virtue of intellectual perseverance, which involves a disposition to mentally persist in the face of challenges towards the realization of one’s intellectual goals. First, I present and motivate what I call ‘the cognitive offloading argument’, which holds that excessive cognitive offloading of the sort incentivized by a device like neuromedia threatens to undermine intellectual virtue development from the standpoint of the theory of virtue responsibilism. Then, I examine the cognitive offloading argument as it applies to the virtue of intellectual perseverance, arguing that neuromedia may increase cognitive efficiency at the cost of intellectual perseverance. If used in an epistemically responsible manner, however, cognitive offloading devices may not undermine intellectual perseverance but instead allow people to persevere with respect to intellectual goals that they find more valuable by freeing them from different kinds of menial intellectual labor.},
  abstract_source = {s2},
}

