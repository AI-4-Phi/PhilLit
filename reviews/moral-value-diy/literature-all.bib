}

@article{fischer1998responsibility,
  author = {Fischer, John Martin and Ravizza, Mark},
  title = {Responsibility and Control: A Theory of Moral Responsibility},
  journal = {The Journal of Ethics},
  year = {1998},
  volume = {2},
  pages = {235--256},
  note = {
  CORE ARGUMENT: Fischer and Ravizza develop a reasons-responsive theory of moral responsibility where an agent is responsible for an action when it issues from their own, moderately reasons-responsive mechanism. They distinguish guidance control (necessary for responsibility) from regulative control (requiring alternative possibilities). An agent has guidance control when they act from a mechanism that is responsive to reasons in an appropriate way, including recognition of sufficient reasons to act otherwise.

  RELEVANCE: The reasons-responsive framework provides an alternative to hierarchical theories for thinking about autonomy and control. For DIY ethics, the question is whether delegating a task to another person means the action no longer issues from the agent's own reasons-responsive mechanism. If autonomous action requires that it flow from the agent's own capacity to respond to reasons, then having another person execute the action might compromise autonomy even if the agent maintains control over outcomes.

  POSITION: Reasons-responsive theory—autonomy and responsibility require acting from one's own reasons-responsive mechanism.
  },
  keywords = {autonomy, moral-responsibility, reasons-responsiveness, Medium, INCOMPLETE, no-abstract}
}

@article{oshana1998personal,
  author = {Oshana, Marina A. L.},
