  },
  keywords = {division-of-labor, epistemic-dependence, social-epistemology, High, INCOMPLETE, no-abstract}
}

@article{alexander2015epistemic,
  author = {Alexander, Jason McKenzie and Himmelreich, Johannes and Thompson, Christopher},
  title = {Epistemic Landscapes, Optimal Search, and the Division of Cognitive Labor},
  journal = {Philosophy of Science},
  year = {2015},
  volume = {82},
  number = {3},
  pages = {424--453},
  doi = {10.1086/681766},
  note = {
  CORE ARGUMENT: Challenges Weisberg and Muldoon's optimistic view of division of cognitive labor. Shows that deliberate search for novel approaches need not be optimal, and that one should be skeptical about benefits of social learning in epistemically complex environments. Identifies errors in earlier arguments claiming epistemic reasons for division of cognitive labor.

  RELEVANCE: Provides critical analysis of when division of labor actually improves epistemic outcomes versus when self-reliant search might be preferable. Important for understanding limits of delegation arguments and conditions under which self-reliance might be epistemically justified. Nuances simplistic "delegation is always better" claims.

  POSITION: Critical refinement of division of labor arguments. Shows that benefits of specialization and delegation are conditional rather than universal.
  },
  keywords = {division-of-labor, social-epistemology, epistemic-landscapes, High},
  abstract = {This article examines two questions about scientists’ search for knowledge. First, which search strategies generate discoveries effectively? Second, is it advantageous to diversify search strategies? We argue pace Weisberg and Muldoon, “Epistemic Landscapes and the Division of Cognitive Labor” (this journal, 2009), that, on the first question, a search strategy that deliberately seeks novel research approaches need not be optimal. On the second question, we argue they have not shown epistemic reasons exist for the division of cognitive labor, identifying the errors that led to their conclusions. Furthermore, we generalize the epistemic landscape model, showing that one should be skeptical about the benefits of social learning in epistemically complex environments.},
  abstract_source = {openalex},
}

@article{keren2018public,
  author = {Keren, Arnon},
  title = {The Public Understanding of What? Laypersons' Epistemic Needs, the Division of Cognitive Labor, and the Demarcation of Science},
  journal = {Philosophy of Science},
  year = {2018},
  volume = {85},
  number = {5},
  pages = {781--792},
  doi = {10.1086/699690},
  note = {
  CORE ARGUMENT: Scientific education should cultivate "competent outsiders" rather than attempting to make laypersons into expert insiders. Given division of cognitive labor, laypersons need competence in evaluating and trusting expertise rather than mastering expert content themselves. This represents a fundamental shift from self-reliant understanding to competent delegation.

  RELEVANCE: Directly addresses when self-reliance (mastering content yourself) is inappropriate and when delegation (trusting experts) is the correct epistemic stance. Shows how attempting DIY understanding can be epistemically inferior to developing competent reliance on experts. Key for understanding when "doing your own research" is misguided.

  POSITION: Argues for epistemic division of labor requiring delegation rather than self-reliant mastery. Challenges idea that everyone should understand everything themselves.
  },
  keywords = {division-of-labor, expertise, public-understanding, epistemic-dependence, High},
  abstract = {What must laypersons understand about science to allow them to make sound decisions on science-related issues? Relying on recent developments in social epistemology, this article argues that scientific education should have the goal not of bringing laypersons’ understanding of science closer to that of expert insiders but rather of cultivating the kind of competence characteristic of “competent outsiders.” Moreover, it argues that philosophers of science have an important role to play in attempts to promote this kind of understanding but that, to successfully fulfill this role, they will have to approach central questions in the field differently.},
  abstract_source = {s2},
}

@article{buzzell2022doing,
  author = {Buzzell, Andrew and Rini, Regina},
  title = {Doing Your Own Research and Other Impossible Acts of Epistemic Superheroism},
  journal = {Philosophical Psychology},
  year = {2022},
  volume = {36},
  number = {5},
  pages = {906--930},
  doi = {10.1080/09515089.2022.2138019},
  note = {
  CORE ARGUMENT: "Doing your own research" represents an impossible epistemological ideal that leads to misinformation when attempted. Information overload combined with implausibly individualistic conceptions of epistemic virtue create vulnerability to conspiracy theories. Normally we cope with informational excess through epistemic dependence on others, but "superheroic" attempts at self-reliance malfunction in adversarial information environments.

  RELEVANCE: Central critique of DIY epistemology showing it is literally impossible and often harmful. Demonstrates that self-reliance in knowledge acquisition can be epistemically and morally irresponsible rather than virtuous. Key paper for showing limits and dangers of valorizing epistemic self-sufficiency.

  POSITION: Strong critique of epistemic self-reliance as impossible and dangerous. Argues for epistemic dependence as necessary and virtuous.
  },
  keywords = {epistemic-dependence, misinformation, self-reliance-critique, conspiracy-theories, High},
  abstract = {ABSTRACT The COVID-19 pandemic has been accompanied by an “infodemic” of misinformation and conspiracy theory. This article points to three explanatory factors: the challenge of forming accurate beliefs when overwhelmed with information, an implausibly individualistic conception of epistemic virtue, and an adversarial information environment that suborns epistemic dependence. Normally we cope with the problems of informational excess by relying on other people, including sociotechnical systems that mediate testimony and evidence. But when we attempt to engage in epistemic “superheroics” - withholding trust from others and trying to figure it all out for ourselves – these can malfunction in ways that make us vulnerable to forming irrational beliefs. Some epistemic systems are prone to coalescing audiences around false conspiracy theories. This analysis affords a new perspective on philosophical efforts to understand conspiracy theories and other epistemic projects prone to collective irrationality.},
  abstract_source = {s2},
}

@article{nguyen2018cognitive,
  author = {Nguyen, C. Thi},
  title = {Cognitive Islands and Runaway Echo Chambers: Problems for Epistemic Dependence on Experts},
  journal = {Synthese},
