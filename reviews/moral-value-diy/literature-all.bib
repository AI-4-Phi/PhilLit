@article{sanderse2018does,
  author = {Sanderse, Wouter},
  title = {Does Aristotle believe that habituation is only for children?},
  journal = {Journal of Moral Education},
  year = {2018},
  volume = {49},
  number = {1},
  pages = {98--110},
  doi = {10.1080/03057240.2018.1497952},
  note = {
  CORE ARGUMENT: Aristotle's account of habituation applies not only to children but
  throughout life. Adult virtue requires ongoing wisdom-guided habituation where
  agents continue and confirm their virtuous habits through reflective practice.
  Practical wisdom itself continues to develop through habitual virtuous activity.

  RELEVANCE: Addresses whether character development requires continued personal
  practice even after initial virtue formation. If habituation is lifelong, then
  doing things yourself may remain important for maintaining and deepening virtue
  even in mature agents - you cannot rest on past practice but must continue active
  engagement.

  POSITION: Defends ongoing role of habituation beyond childhood; virtue maintenance
  requires continued practice guided by practical wisdom.
  },
  keywords = {habituation, practical-wisdom, virtue-development, High},
  abstract = {ABSTRACT Full virtue and practical wisdom comprise the end of neo-Aristotelian moral development, but wisdom cannot be cultivated straight away through arguments and teaching. Wisdom is integrated with, and builds upon, habituation: the acquisition of virtuous character traits through the repeated practice of corresponding virtuous actions. Habit formation equips people with a taste for, and commitment to, the good life; furthermore it provides one with discriminatory and reflective capacities to know how to act in particular circumstances. Unfortunately, habituation is often understood primarily as a method suitable only for children. This article examines whether Aristotle limited habituation to children and, if not, what the relationship between habituation and wisdom beyond childhood might look like. This article concludes that wisdom-guided habituation is also possible for adults who continue and confirm their already established virtuous habits. The implications of this for professional moral education are subsequently discussed.},
  abstract_source = {s2},
}

@article{darnell2019phronesis,
  author = {Darnell, Catherine A. and Gulliford, Liz and Kristjánsson, Kristján and Paris, Panos},
  title = {Phronesis and the Knowledge-Action Gap in Moral Psychology and Moral Education: A New Synthesis?},
  journal = {Human Development},
  year = {2019},
  volume = {62},
  number = {3},
  pages = {101--129},
  doi = {10.1159/000496136},
  note = {
  CORE ARGUMENT: Phronesis (practical wisdom) offers a multicomponent solution to
  bridging the gap between moral knowledge and moral action. Unlike single-component
  approaches (moral identity, moral emotions), phronesis integrates multiple cognitive
  and affective capacities developed through experience. Operationalizing phronesis
  for empirical measurement is feasible and could advance moral psychology.

  RELEVANCE: Practical wisdom as meta-virtue requires experiential knowledge that
  arguably can only be gained through direct engagement with morally significant
  situations. Suggests that doing things yourself may be necessary for developing
  the integrated practical judgment that constitutes phronesis - you cannot learn
  practical wisdom secondhand.

  POSITION: Neo-Aristotelian multicomponent account of practical wisdom; emphasizes
  developmental trajectory and integration of knowing, feeling, and willing.
  },
  keywords = {phronesis, practical-wisdom, moral-psychology, Medium},
  abstract = {This article has two aims. First, to offer a critical review of the literatures on two well-known single-component solutions to the problem of a gap between moral knowledge and moral action: moral identity and moral emotions. Second, to take seriously the rising interest in Aristotle-inspired virtue ethics and character development within the social sciences: approaches that seem to assume that the development of phronesis (practical wisdom) bridges the gap in question. Since phronesis is a multicomponent construct, the latter part of this article offers an overview of what those different components would be, as a necessary precursor to operationalising them if the phronesis hypothesis were to be subjected to empirical scrutiny. The idea of a neo-Aristotelian multicomponent solution to the “gappiness problem” invites comparisons with another multicomponent candidate, the neo-Kohlbergian four-component model, with which it shares at least surface similarities. Some space is thus devoted to the proposed theoretical uniqueness of a phronesis-based multicomponent model vis-à-vis the neo-Kohlbergian one. Our main conclusion is that – weaknesses in its developmental psychological grounding notwithstanding – operationalising the phronesis model for the purposes of instrument design and empirical inquiry would be a feasible and potentially productive enterprise.},
  abstract_source = {s2},
}

@article{cooke2014virtue,
  author = {Cooke, Sandra and Carr, David},
  title = {Virtue, Practical Wisdom and Character in Teaching},
  journal = {British Journal of Educational Studies},
  year = {2014},
  volume = {62},
  number = {2},
  pages = {91--110},
  doi = {10.1080/00071005.2014.929632},
  note = {
  CORE ARGUMENT: Teacher expertise requires practical wisdom (phronesis) involving
  complex context-sensitive deliberation and judgment, not merely technical skill or
  rule-following. Virtue and character are essential to good teaching because they
  enable the flexible practical reasoning needed to respond appropriately to
  unpredictable situations and diverse students.

  RELEVANCE: Examines how phronesis operates in professional practice, illustrating
  how practical wisdom requires direct experiential engagement that cannot be
  codified in rules or delegated. Teaching as exemplar case suggests that many
  important human activities require personal cultivation of practical wisdom through
  doing.

  POSITION: Aristotelian virtue ethics applied to professional practice; practical
  wisdom as essential to teaching excellence.
  },
  keywords = {phronesis, professional-ethics, virtue-ethics, Medium},
  abstract = {ABSTRACT Recent reflection on the professional knowledge of teachers has been marked by a shift away from more reductive competence and skill-focused models of teaching towards a view of teacher expertise as involving complex context-sensitive deliberation and judgement. Much of this shift has been inspired by an Aristotelian conception of practical wisdom (phronesis) also linked by Aristotle to the development of virtue and character. This has in turn led recent educational philosophers and theorists – inspired by latter-day developments in virtue ethics and virtue epistemology – to investigate the contribution of various forms of virtue to the effective practice of teaching. In this light, the present paper undertakes further exploration of the logical geography of virtue, character and practical deliberation in teaching.},
  abstract_source = {s2},
}

@article{kristjansson2014phronesis,
  author = {Kristjánsson, Kristján},
  title = {Phronesis and moral education: Treading beyond the truisms},
  journal = {Theory and Research in Education},
  year = {2014},
  volume = {12},
  number = {2},
  pages = {151--171},
  doi = {10.1177/1477878514530244},
  note = {
  CORE ARGUMENT: Phronesis can and should be taught in moral education, but teaching
  practical wisdom differs from teaching theoretical knowledge. It requires guided
  practice in making context-sensitive moral judgments, learning from experience,
  and developing the perceptual capacities to recognize salient moral features of
  situations. Theory alone is insufficient.

  RELEVANCE: Addresses how practical wisdom develops and whether it can be taught
  vs must be learned through experience. Suggests that while guidance helps, agents
  must actively engage with moral situations themselves to develop phronesis - it
  cannot be transferred passively or performed by others on your behalf.

  POSITION: Practical wisdom can be cultivated through education but requires active
  experiential engagement; beyond "truisms" to concrete pedagogical implications.
  },
  keywords = {phronesis, moral-education, virtue-cultivation, Medium},
  abstract = {Whereas most latter-day Aristotelian approaches to moral education highlight the early habituation phase of moral development, they rarely have much to say, beyond truisms from the Nicomachean ethics, about the ultimate Aristotelian goal of cultivating fully fledged phronesis. The aim of this article is to repair the dearth of attention given to phronesis in moral education circles and to bring considerations from other, but related, discourses (such as general Aristotelian scholarship and wisdom studies in psychology) to bear on it. I pay special attention to the so-called skill analogy, which considers virtue acquisition on par with the acquisition of ordinary practical skills, but argue that current articulations of it fail to account fully for the integrative, as distinct from the constitutive, function of phronesis. I argue that the skill analogy needs to be extended to account for the fact that in order to develop fully, phronesis requires direct teaching about the nature of the well-rounded life, providing the learner with an indirect blueprint for eudaimonia. Such a blueprint cannot eschew consequentialist considerations, and to be taught well within current school systems, it needs a discrete place in the school timetable.},
  abstract_source = {openalex},
}

@article{webber2013character,
  author = {Webber, Jonathan},
  title = {Character, Attitude and Disposition},
  journal = {European Journal of Philosophy},
  year = {2013},
  volume = {21},
  number = {4},
  pages = {478--502},
  doi = {10.1111/ejop.12028},
  note = {
  CORE ARGUMENT: Attitude psychology provides empirical support for virtue ethics
  by confirming the role of habituation in character development. Attitudes (as
  studied empirically) combine cognitive, affective, and behavioral components
  developed through repeated practice, paralleling how virtue ethicists describe
  character trait formation. Empirical findings undermine situationist challenges.

  RELEVANCE: Bridges virtue ethics and empirical psychology on habituation and
  character development. Supports the view that repeated practice (doing things
  yourself) shapes character through forming attitudes that integrate thoughts,
  feelings, and behavioral dispositions - a process that cannot occur through passive
  observation or delegation.

  POSITION: Virtue ethics compatible with attitude psychology; habituation empirically
  supported as mechanism of character formation.
  },
  keywords = {character-development, habituation, attitude-psychology, Medium},
  abstract = {Abstract Recent debate over the empirical psychological presuppositions of virtue ethics has focused on reactive behavioural dispositions. But there are many character traits that cannot be understood properly in this way. Such traits are well described by attitude psychology. Moreover, the findings of attitude psychology support virtue ethics in three ways. First, they confirm the role of habituation in the development of character. Further, they show virtue ethics to be compatible with the situation manipulation experiments at the heart of the recent debate. Finally, they show how the cognitive‐affective theory of personality and the two‐system theory of behavioural cognition are compatible, thereby undermining the current empirical challenge to virtue ethics. Empirical research into the nature and development of attitudes should therefore be central to philosophical discussions of virtue and character.},
  abstract_source = {openalex},
}

@book{leunissen2017natural,
  author = {Leunissen, Mariska},
  title = {From Natural Character to Moral Virtue in Aristotle},
  publisher = {Oxford University Press},
  year = {2017},
  doi = {10.1093/acprof:oso/9780190602215.001.0001},
  note = {
  CORE ARGUMENT: Aristotle's biological treatises reveal that natural character
  traits (physiological dispositions) provide the foundation for moral virtue
  development. Habituation transforms natural character into full moral virtue
  through practice. Nature provides starting points but virtues are achieved through
  cultivation - they are not innate but must be developed.

  RELEVANCE: Clarifies Aristotle's view on the role of practice and habituation in
  virtue development. Even if nature provides some predisposition, achieving virtue
  requires active cultivation through practice - doing virtuous actions yourself is
  necessary to transform natural tendencies into stable virtuous character. Relevant
  for understanding whether virtue is something you must develop yourself or could
  be externally induced.

  POSITION: Aristotelian virtue development requires habituation building on natural
  foundations; neither pure nature nor pure practice alone suffices.
  },
  keywords = {Aristotle, habituation, natural-virtue, Medium},
  abstract = {This book discusses Aristotle’s biological views about character and the importance of what he calls “natural character traits” for the development of moral virtue as presented in his ethical treatises. It provides a new, comprehensive account of the physiological underpinnings of moral development and thereby shows, first, that Aristotle’s ethical theories do not exhaust his views about character, as has traditionally been assumed, and, second, that his treatment of natural character in the biological treatises provides the conceptual and ideological foundation for his views about habituation as developed in his ethics. This manuscript thus takes seriously Aristotle’s claim—often ignored—that nature is one of the factors through which men become “good and capable of fine deeds.” Part I (“The Physiology and Science of Natural Character”) analyzes, in three chapters, Aristotle’s notion of natural character as it is developed in the biological treatises and its role in moral development, especially as it affects women and certain “barbarians”—groups who are typically left out of accounts of Aristotle’s ethics. I also discuss its relevance for our understanding of physiognomical ideas in Aristotle. Part II (“The Physiology of Moral Development”) explores the psychophysical changes in body and soul that one is required to undergo in the process of acquiring moral virtues. It includes a discussion of Aristotle’s eugenic views, his identification of habituation as a form of human perfection, and his claims about the moral deficiencies of women that link them to his beliefs about their biological imperfections.},
  abstract_source = {openalex},
}

@article{snow2016habits,
  author = {Snow, Nancy E.},
  title = {How Habits Make Us Virtuous},
  journal = {The Oxford Handbook of Philosophical Methodology},
  year = {2016},
  publisher = {Oxford University Press},
  doi = {10.1093/acprof:oso/9780190271466.003.0007},
  note = {
  CORE ARGUMENT: Habits contribute to virtuous character by coordinating conscious
  and nonconscious cognitive processes. Different paradigms of character formation
  (folk habits, Annas's account, Confucian cultivation) combine conscious deliberation
  and unconscious automaticity in varying ways. All emphasize that habits require
  repeated practice to become integrated into character.

  RELEVANCE: Explains how habituation works cognitively and why repeated personal
  practice matters for virtue development. Habits formed through doing things
  yourself coordinate multiple levels of processing in ways that make virtuous
  responses automatic yet flexible - a kind of practical knowledge that cannot be
  acquired without direct engagement.

  POSITION: Habits integrate conscious and nonconscious processes in virtue
  development; counters situationist view of cognitive fragmentation.
  },
  keywords = {habituation, virtue-acquisition, habits, Medium},
  abstract = {Abstract Situationists have extended their critique of virtue ethics to practical rationality. They adduce empirical psychological studies to highlight the conflicted nature of conscious and nonconscious processes, arguing that because of this, cognition is too fragmented to support the kind of integrated personality needed to sustain robust virtues. This chapter explores the coordination of these two types of processing in the habits that contribute to virtuous character, thereby countering, at least in part, the situationist view of the fragmented nature of cognition. It also investigates three different paradigms of character formation: the "habits of the folk," Julia Annas' account, and Confucian character formation. Each approach combines a different blend of conscious and nonconscious processing in the acquisition of virtue, and all three offer visions of character development that counter the situationist account of the fragmentation of cognitive processes.},
  abstract_source = {openalex},
}

