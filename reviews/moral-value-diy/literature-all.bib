@article{bashour2021virtue,
  author = {Bashour, Bana},
  title = {How Did She Get So Good? On Virtue and Skill},
  journal = {Ethical Theory and Moral Practice},
  year = {2021},
  volume = {24},
  number = {2},
  pages = {563--575},
  doi = {10.1007/s10677-020-10148-2},
  note = {
