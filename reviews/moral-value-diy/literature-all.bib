@book{arendt1958human,
  author = {Arendt, Hannah},
  title = {The Human Condition},
  year = {1958},
  publisher = {University of Chicago Press},
  address = {Chicago},
  note = {
  CORE ARGUMENT: Distinguishes labor (cyclical biological necessity, consumed immediately) from work (durable object-creation) and action (political engagement). Labor corresponds to animal laborans, work to homo faber. Modern society's emphasis on labor and consumption has devalued lasting work and action, reducing humans to their metabolic functions. Work creates a stable, durable world of artifacts that mediates human relationships and provides permanence against life's cyclicality.

  RELEVANCE: Arendt's labor/work distinction addresses whether productive activity's value depends on product durability or the activity itself. If work (creating lasting objects) is more valuable than labor (repetitive maintenance), this suggests outcome-orientation. However, her emphasis on homo faber as world-building through making provides grounds for valuing the productive process, not just products. Relevant to DIY insofar as creating durable things yourself may constitute "work" in Arendt's sense, building a meaningful human world.

  POSITION: Foundational mid-20th century phenomenological account. Neither purely process- nor outcome-focused, but emphasizes work's world-building function through durable object-creation.
  },
  keywords = {labor-work-distinction, phenomenology, homo-faber, High},
  abstract = {Classical realism and Morgenthau in particular have recently experienced a revived interest in International Relations (IR). The evolving debate has helped to contextualise and reconstruct Morgenthau's thought which until now had been misrepresented in structural realist and early poststructuralist interpretations. However, despite all of its achievements, we have yet to draw more attention to Morgenthau's contribution to contemporary IR theory. To contribute to the closing of this research gap this article considers a set of questions which Morgenthau himself asked at the beginning of his career as its conceptual framework. It is argued that Morgenthau was particularly concerned with the dehumanisation of socio-political life in modern democracies evoked through processes of ideologisation, technologisation, and scientification, which he countered by focusing on a re-introduction of the human factor to politics. This demonstrates that Morgenthau's work is a rich source for IR theory because his intellectual agenda was driven by concerns similar to what we find in post-structuralism},
  abstract_source = {core},
}

@book{jaeggi2014alienation,
  author = {Jaeggi, Rahel},
  title = {Alienation},
  year = {2014},
  publisher = {Columbia University Press},
  address = {New York},
  editor = {Neuhouser, Frederick},
  doi = {10.7312/jaeg15198},
  note = {
  CORE ARGUMENT: Develops a non-essentialist account of alienation as a disturbance in one's relation to self, others, activity, and world. Alienation occurs when subjects cannot appropriate their own lives—when their relations become opaque, unresponsive, or rigid. Moves beyond Marx's production-centered account to include alienation in consumption, social roles, and identity. Alienation is a relation of relationlessness: the subject is involved but cannot make the relation their own or experience it as meaningful.

  RELEVANCE: Jaeggi's broader conception of alienation extends beyond wage labor to any activity where the subject cannot appropriate the process or identify with what they're doing. This applies directly to delegation: if you cannot appropriate work done by others on your behalf, you experience alienation even if the outcome is desirable. Her emphasis on appropriation (making something one's own) speaks to DIY's potential value: doing it yourself may be necessary to appropriate the activity and its results.

  POSITION: Contemporary Frankfurt School critical theory. Revises Marx by de-emphasizing economic determinism, emphasizing experiential appropriation. High importance for theoretical framing of alienation beyond employment.
  },
  keywords = {alienation-theory, appropriation, Frankfurt-School, High, INCOMPLETE, no-abstract}
}

@book{veltman2016meaningful,
  author = {Veltman, Andrea},
  title = {Meaningful Work},
  year = {2016},
  publisher = {Oxford University Press},
  address = {Oxford},
  doi = {10.1093/acprof:oso/9780190618179.001.0001},
  note = {
  CORE ARGUMENT: Develops a pluralistic account of meaningful work combining subjective and objective dimensions. Work is meaningful when it (1) is experienced as meaningful by the worker, (2) involves autonomy and skill exercise, (3) makes a genuine social contribution, and (4) is recognized by others. Defends meaningful work as central to human flourishing and a proper concern of justice. Argues liberal political philosophy must accommodate meaningful work without collapsing into perfectionism.

  RELEVANCE: Veltman's account bridges subjective experience and objective features, suggesting work's value includes both process (autonomy, skill exercise) and outcome (social contribution, recognition). This pluralism is directly relevant to DIY: doing things yourself may be valuable both for the autonomous exercise of skill (process) and the contribution made (outcome). Her emphasis on recognition raises the question whether DIY forfeits social recognition that employment provides.

  POSITION: Liberal egalitarian approach to meaningful work. Foundational recent monograph defending meaningful work as justice concern. High importance for contemporary meaningful work debates.
  },
  keywords = {meaningful-work, autonomy, pluralism, High},
  abstract = {Abstract This book examines the importance of work in human well-being, addressing several related philosophical questions about work and arguing on the whole that meaningful work is central in human flourishing. Work impacts flourishing not only in developing and exercising human capabilities but also in instilling and reflecting virtues such as honor, pride, dignity, self-discipline, and self-respect. Work also attaches to a sense of purposefulness and personal identity, and meaningful work can promote both personal autonomy and a sense of personal satisfaction that issues from making oneself useful. Further still, work bears a formative influence on character and intelligence and provides a primary avenue for exercising complex skills and garnering esteem and recognition from others. The author defends a pluralistic account of meaningful work, identifying four primary dimension of meaningful work: (1) developing or exercising the worker’s capabilities, especially insofar as this expression meets with recognition and esteem; (2) supporting virtues; (3) providing a purpose, and especially producing something of enduring value; and (4) integrating elements of a worker’s life. In light of the impact that work has on flourishing, the author argues that well-ordered societies provide opportunities for meaningful work and that the philosophical view of value pluralism, which casts work as having no special significance in an individual’s life, is false. The book also addresses oppressive work that undermines human flourishing, examining potential solutions to minimize the impact of bad work on those who perform it.},
  abstract_source = {openalex},
}

@book{muirhead2007just,
  author = {Muirhead, Russell},
  title = {Just Work},
  year = {2007},
  publisher = {Harvard University Press},
  address = {Cambridge, MA},
  doi = {10.4159/9780674041271},
  note = {
  CORE ARGUMENT: Argues that justice in work involves not just fair wages or working conditions, but the quality of work itself—whether it engages workers' capacities and allows them to contribute meaningfully. Work's meaning comes from social contribution (producing goods others value) rather than subjective satisfaction. A just society must address distribution of meaningful work opportunities, not just income. Critiques both libertarian and egalitarian views for focusing only on distributive justice while neglecting work's qualitative dimensions.

  RELEVANCE: Muirhead's emphasis on work as social contribution (serving others) versus self-realization (developing oneself) maps onto outcome-versus-process debates. If work's value primarily lies in social contribution, then delegation is less problematic—the contribution still occurs. However, if work also enables development of one's capacities, doing it yourself may be necessary to realize this value. Relevant to DIY's social dimension: does DIY forfeit contributive value by not serving others?

  POSITION: Communitarian-influenced account emphasizing work's social contribution over self-realization. Foundational early 21st-century work on justice and work quality.
  },
  keywords = {justice-in-work, social-contribution, distributive-justice, High},
  abstract = {This elegant essay on the justice of work focuses on the fit between who we are and the kind of work we do. Russell Muirhead shows how the common hope for work that fulfills us involves more than personal interest; it also points to larger understandings of a just society. We are defined in part by the jobs we hold, and Muirhead has something important to say about the partial satisfactions of the working life, and the increasingly urgent need to balance the claims of work against those of family and community. Against the tendency to think of work exclusively in contractual terms, Muirhead focuses on the importance of work to our sense of a life well lived. Our notions of freedom and fairness are incomplete, he argues, without due consideration of how we fit the work we do. Muirhead weaves his argument out of sociological, economic, and philosophical analysis. He shows, among other things, how modern feminism's effort to reform domestic work and extend the promise of careers has contributed to more democratic understandings of what it means to have work that fits. His account of individual and social fit as twin standards of assessment is original and convincing--it points both to the unavoidable problem of distributing bad work in society and to the personal importance of finding fulfilling work. These themes are pursued through a wide-ranging discussion that engages thinkers from Plato to John Stuart Mill to Betty Friedan. Just Work shows what it would mean for work to make good on the high promise so often invested in it and suggests what we--both as a society and as individuals--might do when it falls short},
  abstract_source = {openalex},
}

@article{kandiyali2020importance,
  author = {Kandiyali, Jan},
  title = {The Importance of Others: Marx on Unalienated Production},
  journal = {Ethics},
  year = {2020},
  volume = {130},
  number = {4},
  pages = {555--587},
  doi = {10.1086/708536},
  note = {
  CORE ARGUMENT: Argues that for Marx, unalienated production is essentially social: it requires producing for others who appreciate one's work, not solitary self-realization. Unalienated work has four features: freely chosen, involves self-realization, intended to satisfy others' needs, and appropriately appreciated by those others. Contrasts Marx with expressivist readings that emphasize individual self-realization. The social dimension—mutual recognition through production—is constitutive of unalienated labor, not merely valuable as a side-effect.

  RELEVANCE: Kandiyali's emphasis on the essential sociality of unalienated work directly challenges individualist DIY ethics. If Marx is right that meaningful production requires others' recognition and serving their needs, purely personal DIY projects may fail to realize work's full value. However, this also suggests delegation to others may preserve work's value if it maintains social relations of mutual recognition. Critical for assessing whether DIY can be meaningful when it serves only oneself.

  POSITION: Contemporary Marxist interpretation emphasizing work's irreducibly social dimension. High importance for connecting alienation theory to recognition and social contribution.
  },
  keywords = {Marx, unalienated-labor, recognition, social-contribution, High},
  abstract = {Marx’s vision of unalienated production is often thought to be subject to decisive objections. This article argues that these objections rely on a misinterpretation of Marx’s position. It provides a new interpretation of Marx’s vision of unalienated production. Unlike another well-known account, it suggests that unalienated production involves realizing oneself through providing others with the goods and services they need for their self-realization. It argues that this view is appealing and that it offers a more successful response to objections than previous interpretations. In doing so, it hopes to put Marx’s concern with alienation and nonalienation back on the table.},
  abstract_source = {s2},
  sep_context = {SEP "Alienation" entry cites Kandiyali (2020) to characterize unalienated/meaningful work in communist society as: freely chosen, involving self-realization (developing essential human powers), intended to satisfy others' needs, and appropriately appreciated by those others. This contrasts with alienated labor under capitalism which is forced, prevents self-realization, is not intended to satisfy others' needs, and is not appropriately appreciated. The SEP uses Kandiyali to articulate Marx's positive vision of unalienated work as essentially social and recognition-based.},}

@article{vanderdeijl2022two,
  author = {van der Deijl, Willem},
  title = {Two Concepts of Meaningful Work},
  journal = {Journal of Applied Philosophy},
  year = {2022},
  volume = {41},
  number = {2},
  pages = {202--217},
  doi = {10.1111/japp.12614},
  note = {
  CORE ARGUMENT: Distinguishes two concepts of meaningful work: quality (work good for the worker—autonomous, engaging, skill-using) and significance (work good for others—making valuable contributions). These can come apart: assembly line work may have high significance (producing needed goods) but low quality; an engaging hobby may have high quality but low significance. Both dimensions matter, but political philosophy should prioritize ensuring significance-work opportunities (contributive justice) over quality-work.

  RELEVANCE: This distinction directly addresses the DIY question by separating process-value (quality) from outcome-value (significance). Doing things yourself may preserve quality-meaningfulness (autonomous engagement) but sacrifice significance-meaningfulness (social contribution) if the outcome serves only yourself. Van der Deijl's prioritization of significance over quality suggests delegation may be preferable when it enables greater social contribution. However, this assumes the activity is work rather than leisure.

  POSITION: Recent contribution distinguishing two dimensions of meaningful work. Outcome-oriented insofar as it prioritizes significance, but recognizes quality's importance. Medium-high importance for conceptual clarity.
  },
  keywords = {meaningful-work, quality-significance, contributive-justice, High},
  abstract = {ABSTRACT The concept of meaningful work is used to evaluate the quality of work. Typical cases of meaningless work that have been used to clarify this concept are assembly line work, and work involving other types of mindless tasks, but also David Graeber's ‘bullshit jobs’. I argue that there are at least two fundamental reasons to care about meaningful work: reasons from the wellbeing of the worker and reasons pertaining to meaningfulness of the worker's life. I first argue that a concept of meaningful work needs to reflect these two values, but that these two values may come apart. Because of this, accounts that provide a single answer to the question to what extent a particular work context is meaningful work for a particular worker are unable to reflect these two values. I then survey three promising accounts of meaningful work: perfectionism, which captures the self‐interested aspect of meaningful work well but fails to capture the meaningfulness aspect appropriately; consequentialism, which captures the meaningfulness aspect well but fails to capture the self‐interested aspect; and Wolf's Fitting Fulfilment View of meaningful projects, which can be read as addressing both concerns but leads to implausible judgments about meaningful work. I then argue that we should conceive of the concerns that fall under the notion of meaningful work as two separate concepts and values. The best work incorporates both these dimensions but falling short on either dimension is problematic for different reasons.},
  abstract_source = {openalex},
}

@article{althorpe2022meaningful,
  author = {Althorpe, Caleb},
  title = {Meaningful Work, Nonperfectionism, and Reciprocity},
  journal = {Critical Review of International Social and Political Philosophy},
  year = {2022},
  volume = {28},
  number = {4},
  pages = {685--706},
  doi = {10.1080/13698230.2022.2137753},
  note = {
  CORE ARGUMENT: Defends a liberal, non-perfectionist case for meaningful work as person-engaging social contribution connected to reciprocity. In a cooperative society, all members should have opportunities to contribute in ways that engage their capacities—this is what they owe each other as reciprocating participants. Meaningful work as person-engaging contribution is thus a social basis of self-respect, not a perfectionist good. Existing liberal defenses relying on work's formative effects are too narrow.

  RELEVANCE: Althorpe's emphasis on person-engaging contribution combines process and outcome: the activity must engage the person's capacities (process) while making a social contribution (outcome). This suggests DIY's value depends on whether it involves both engagement and contribution. Personal projects lacking social contribution may fail reciprocity's demands even if engaging. Relevant for assessing whether DIY can be justified in liberal terms without perfectionism.

  POSITION: Liberal political philosophy defending meaningful work via reciprocity rather than perfectionism. Medium importance for connecting meaningful work to justice frameworks.
  },
  keywords = {meaningful-work, reciprocity, liberalism, self-respect, Medium},
  abstract = {ABSTRACT Any liberal argument for incorporating meaningful work within a theory of justice inherits a burden of proof to show why it does not fall to the objection that privileging the work process valorizes particular ideas about the good and thereby unfairly privileges some persons over others. Existing liberal defences of meaningful work, which rely on the formative effects of work in contemporary economies, have a limited scope of appeal and do not provide a convincing reply to the objection. The paper offers an alternative reply by arguing that meaningful work, understood as a person-engaging social contribution, is intimately connected through reciprocity to the fundamental political idea of society as a system of cooperation between free and equal participating members. This makes the opportunity to engage in meaningful work a social basis of self-respect.},
  abstract_source = {s2},
}

@article{corbin2024quiet,
  author = {Corbin, Thomas A. and Flenady, Gene},
  title = {Quiet Quitting as Compensatory Respect: Meaningful Work, Recognition, and the Entrepreneurial Ethic},
  journal = {Philosophy of Management},
  year = {2024},
  volume = {23},
  number = {4},
  pages = {461--480},
  doi = {10.1007/s40926-024-00320-4},
  note = {
  CORE ARGUMENT: Analyzes "quiet quitting" (limiting work to contracted requirements) through Honneth's recognition theory as workers' strategic response to misrecognition. When the "entrepreneurial ethic" demands emotional over-investment in work, workers experience disrespect rather than recognition. Quiet quitters compensate by seeking recognition outside work rather than through collective workplace struggles. The entrepreneurial work ethic undermines genuine recognition by making excessive demands that most workers cannot meet.

  RELEVANCE: Illustrates how contemporary expectations that work be meaningful and identity-constituting can alienate workers when these expectations exceed what work actually provides. Relevant to DIY insofar as it questions whether all productive activity must be meaningful or identity-constituting. May suggest that not all tasks need to be done oneself—limiting engagement to genuine opportunities for recognition is rational. Addresses boundary between work and other life domains.

  POSITION: Contemporary Honnethian recognition theory applied to workplace ethics. Skeptical of demands for pervasive work meaningfulness. Medium importance for current debates.
  },
  keywords = {recognition, entrepreneurial-ethic, workplace-ethics, Medium},
  abstract = {This paper employs Axel Honneth’s recognition theory to interpret ‘quiet quitting’ – the practice of limiting work efforts to contracted requirements – as a strategic response by workers facing misrecognition in their work environment. Honneth argues that misrecognition in any one of three social spheres (the family, political society, and the workplace) constitutes disrespect and causes psychological harm. While Honneth contends that experiences of disrespect tend to motivate collective “struggles for recognition,” we suggest that quiet quitters present an alternative response to disrespect, individually seeking recognition in other social spheres rather than engaging in collective action. Further, we draw on Honneth to suggest that the contemporary “entrepreneurial” work ethic – the widespread expectation that workers invest emotionally in their work role – can in practice undermine workplace recognition, contributing to quiet quitters’ compensatory emphasis on recognitive relations outside of work. This recognition-theoretical approach extends current discussions around quiet quitting and yields valuable insights for management theory and practice regarding the critical role of genuine employee recognition in promoting individual well-being and meaningful work experiences.},
  abstract_source = {s2},
}

@article{celentano2023labor,
  author = {Celentano, Denise},
  title = {Labor Automation for Fair Cooperation: Why and How Machines Should Provide Meaningful Work for All},
  journal = {Journal of Social Philosophy},
  year = {2023},
  volume = {55},
  number = {1},
  pages = {25--43},
  doi = {10.1111/josp.12548},
  note = {
  CORE ARGUMENT: Develops a "technological contributive justice" framework arguing that automation should distribute work fairly, not just income. Even with universal basic income, we must justly organize remaining unautomated labor. Fairness requires that everyone benefit from automation in their work (accessing meaningful tasks) not just income. Proposes machines should free humans for meaningful work rather than eliminate work entirely. Contributive perspective complements but does not replace distributive concerns.

  RELEVANCE: Directly addresses whether automation (analogous to delegation) threatens meaningful work or can be designed to enhance it. If justice requires meaningful work opportunities, then complete delegation/automation may be problematic even with income maintenance. However, selective automation enabling more meaningful work for all may be preferable to unequal access to meaningful tasks. Relevant to DIY question: does doing things yourself preserve meaningful work, or does strategic delegation enable more meaningful activity overall?

  POSITION: Contributive justice approach to automation. Values work opportunities, not just outcomes. Medium-high importance for connecting meaningful work to technological change.
  },
  keywords = {automation, contributive-justice, meaningful-work, technology, Medium},
  abstract = {By affecting work, resources, organizations, and people's lives, automation processes can be disruptive of the basic structure of society. Nonetheless, we may benefit from this disruption, as automation may offer opportunities to make social cooperation fairer. Just as philosophers have addressed the problem of which values and principles should regulate the distribution of goods, so we may consider the problem of the values and principles guiding technological change with regard to work. Indeed, automation is often addressed from a distributive perspective. A prevailing concern in the debate is about making sure that the technologically unemployed will not lose access to income through unconditional redistributive policies, while some have suggested policies like a “robot tax” to disincentivize companies' investment in labor-saving devices. While crucial given the massive increase in profits afforded by automation and the inequalities that go with it, concerns about income are not the only ones raised by automation. Without underestimating their relevance, in this article I leave aside problems about income to focus on automation from the perspective of work. That is, my concern here is on social cooperation from the perspective of contribution instead of distribution, within a framework that may be called technological contributive justice. If UBI advocates expect everyone to benefit from automation in their income, the contributive perspective postulates that everyone should benefit from automation in their work. There are three main reasons behind this shift. First, even in a world in which income were unconditionally accessible to all, there would be the problem of how to fairly organize the unautomated socially necessary labor (e.g., waste collection, care work, etc.). I call this the Received: 14 November 2022 Revised: 27 July 2023 Accepted: 7 August 2023},
  abstract_source = {s2},
}

@article{bowie1998kantian,
  author = {Bowie, Norman E.},
  title = {A Kantian Theory of Meaningful Work},
  journal = {Journal of Business Ethics},
  year = {1998},
  volume = {17},
  pages = {1083--1092},
  doi = {10.1023/A:1005770325603},
  note = {
  CORE ARGUMENT: Develops a Kantian account where work is meaningful when it (1) is freely entered into, (2) allows autonomy and independence, (3) enables development of rational capacities, (4) provides sufficient wages, (5) supports moral development, and (6) is not paternalistic. Grounded in treating workers as ends in themselves with dignity, not merely as means. Meaningful work respects and develops human rational agency.

  RELEVANCE: Bowie's emphasis on autonomy and rational capacity development provides grounds for valuing doing things yourself—delegation may forfeit opportunities to exercise and develop these capacities. However, his focus on non-paternalism and free choice suggests coerced DIY would be worse than chosen delegation. Relevant for assessing whether Kantian ethics supports DIY-as-process-value when activity develops rational capacities, or supports delegation when freely chosen.

  POSITION: Kantian deontological approach to meaningful work. Emphasizes autonomy and rational capacity development (process values). Medium importance as alternative to consequentialist and Marxist approaches.
  },
  keywords = {Kantian-ethics, autonomy, rational-agency, Medium, INCOMPLETE, no-abstract}
}

@article{schwartz1982meaningful,
  author = {Schwartz, Adina},
  title = {Meaningful Work},
  journal = {Ethics},
  year = {1982},
  volume = {92},
  number = {4},
  pages = {634--646},
  doi = {10.1086/292378},
  note = {
  CORE ARGUMENT: Argues work is meaningful when it allows workers to exercise their capacities in complex, creative ways and see their product as embodying their thought and will. Draws on Marx's concept of objectification (not alienation): meaningful work externalizes the worker's ideas and purposes in the product. Fragmented, routinized work prevents this objectification even if outcomes are valuable. The activity itself, not just the product, must engage the worker's full capacities.

  RELEVANCE: Schwartz's emphasis on objectification—seeing one's thought embodied in the product through engaging activity—strongly supports process-value and DIY ethics. If meaning requires exercising complex capacities throughout production, delegation to others prevents achieving this meaning even if products are identical. One of the clearer defenses of work-as-process-value in the literature. Directly relevant to whether DIY has distinctive value beyond outcomes.

  POSITION: Neo-Marxian account emphasizing self-realization through complex productive activity. Strongly process-oriented. High-medium importance for process-value arguments.
  },
