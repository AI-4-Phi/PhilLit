@article{buchanan2002political,
  author = {Buchanan, Allen},
  title = {Political Legitimacy and Democracy},
  journal = {Ethics},
  year = {2002},
  volume = {112},
  number = {4},
  pages = {689--719},
  note = {
  CORE ARGUMENT: Political legitimacy does not necessarily require democracy. Legitimacy is the right to rule—the moral justification for imposing binding rules and coercing compliance—while democracy is one possible institutional arrangement. An institution is legitimate if it is morally justified in wielding political power; democracy may be instrumentally valuable for achieving legitimacy but is not conceptually necessary for it. Natural duty to support just institutions grounds political obligations, but institutional justice (including procedural fairness) does not require specifically democratic procedures in all contexts.

  RELEVANCE: Challenges assumption that democratic traditions are necessary for legitimate political authority. Important for project because it questions whether specifically democratic traditions have intrinsic value versus instrumental value. If legitimacy can exist without democracy, then democratic traditions' value must be justified on other grounds (justice, rights-protection, etc.) rather than assumed. Separates question of legitimate authority from question of democratic governance, forcing more careful analysis of when democratic traditions specifically are valuable versus when other legitimate institutional traditions might serve better.

  POSITION: Legitimacy as institutional moral justification, conceptually independent from democracy; challenges democracy-centric political philosophy.
  },
  keywords = {political-legitimacy, democracy, institutional-justification, High}
}

