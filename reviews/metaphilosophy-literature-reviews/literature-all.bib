@article{Lewinski2012paradox,
  author = {Lewiński, Marcin},
  title = {The Paradox of Charity},
  journal = {Informal Logic},
  year = {2012},
  volume = {32},
  number = {4},
  pages = {403--439},
  doi = {10.22329/il.v32i4.3620},
  note = {
  CORE ARGUMENT: Lewiński identifies a fundamental paradox in applying the principle of charity to argumentation: being charitable to one party in a dispute often requires being uncharitable to the other party. Since argumentation involves at least two parties who disagree, an analyst who interprets one party's position in the strongest possible way may be forced to interpret the other party's position as weaker. Lewiński argues this paradox requires significantly limiting the application of charity depending on contextual factors and the analyst's dialectical role.

  RELEVANCE: Crucial for literature review methodology where one is synthesizing positions that are often in disagreement with each other. Raises the question of whether representing competing positions in a literature review requires taking sides or whether a neutral stance is possible. The paradox highlights that "charitable" representation is not simply a matter of being fair to individual authors but involves complex decisions about how to construct the overall dialectical space.

  POSITION: Critical position showing internal tension in charity principles when applied to multi-party argumentation. Relevant to debates about neutrality and positioning in literature reviews.
  },
  keywords = {principle-of-charity, argumentation-theory, dialectics, Medium},
  abstract = {The principle of charity is used in philosophy of language and argumentation theory as an important principle of interpretation which credits speakers with “the best” plausible interpretation of their discourse. I contend that the argumentation account, while broadly advocated, misses the basic point of a dialectical conception which approaches argumentation as discussion between (at least) two parties who disagree over the issue discussed. Therefore, paradoxically, an analyst who is charitable to one discussion party easily becomes uncharitable to the other. To overcome this paradox, I suggest to significantly limit the application of the principle of charity depending on contextual factors.},
  abstract_source = {s2},
}

@article{Prus2023dialectical,
  author = {Pruś, Jakub and Sikora, Piotr},
