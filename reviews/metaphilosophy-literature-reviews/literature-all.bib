@article{ClarkeDoane2022mathematics,
  author = {Clarke-Doane, Justin},
  title = {Mathematics and Metaphilosophy},
  year = {2022},
  doi = {10.1017/9781108993937},
  note = {
  CORE ARGUMENT: Clarke-Doane examines the problem of mathematical knowledge and its implications for metaphilosophy. He argues that the challenge to explain mathematical knowledge arises from disagreement over mathematical axioms that bottoms out in disagreement over intuitions (the justificatory challenge) and from the modal fact that we could easily have had different mathematical beliefs (the reliability challenge). He argues that mathematical facts might be so plentiful that our knowledge of them is unmysterious, and extends this pluralism to modality, logic, and normative theory. This metaphilosophical pluralism has surprising implications: metaphysically it engenders perspectivalism and indeterminacy, while methodologically it vindicates Carnapian pragmatism.

  RELEVANCE: Though focused on mathematics, this work has direct implications for philosophical methodology more broadly. The argument that philosophical disagreements often bottom out in disagreements over intuitions connects to debates about the role of intuitions in philosophical method. The defense of pluralism across multiple domains (mathematics, modality, logic, normative theory) suggests that philosophical literature will exhibit deep disagreements that cannot be resolved by appeal to shared data or methods. For literature review methodology, this implies that reviews cannot aim for convergence on truth but must acknowledge legitimate pluralism.

  POSITION: Metaphilosophical pluralism extending from philosophy of mathematics to modality, logic, and ethics.
  },
  keywords = {metaphilosophy, pluralism, mathematics, Medium},
  abstract = {This Element discusses the problem of mathematical knowledge, and its broader philosophical ramifications. It argues that the challenge to explain the (defeasible) justification of our mathematical beliefs ('the justificatory challenge'), arises insofar as disagreement over axioms bottoms out in disagreement over intuitions. And it argues that the challenge to explain their reliability ('the reliability challenge'), arises to the extent that we could have easily had different beliefs. The Element shows that mathematical facts are not, in general, empirically accessible, contra Quine, and that they cannot be dispensed with, contra Field. However, it argues that they might be so plentiful that our knowledge of them is unmysterious. The Element concludes with a complementary 'pluralism' about modality, logic and normative theory, highlighting its surprising implications. Metaphysically, pluralism engenders a kind of perspectivalism and indeterminacy. Methodologically, it vindicates Carnap's pragmatism, transposed to the key of realism.},
  abstract_source = {s2},
}

@article{Nado2017how,
  author = {Nado, Jennifer},
  title = {How To Think About Philosophical Methodology},
