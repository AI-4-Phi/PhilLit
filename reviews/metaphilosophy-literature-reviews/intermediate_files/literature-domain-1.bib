@article{Utomo2025hegemony,
  author = {Utomo, Alnino and Djunatan, Stephanus},
  title = {The Hegemony and Metaphilosophy: Critiquing Western Universality through Non-Western Thought},
  journal = {Hanifiya: Jurnal Studi Agama-Agama},
  year = {2025},
  doi = {10.15575/hanifiya.v8i2.48753},
  note = {
  CORE ARGUMENT: This article critically examines how Western philosophy constructs epistemic hegemony through historical narratives (linear progress from Greece to modernity), methodological standards (logical-deductive methods as prerequisites for philosophical validity), and terminology (Greek-Latin vocabulary as necessary for philosophical discourse). These mechanisms systematically exclude non-Western thought (exemplified by Confucianism and Daoism) from recognition as philosophy. The authors propose "dialogical exclusive multiplicity" as an alternative framework that recognizes non-Western traditions as autonomous and equal rather than requiring them to conform to Western philosophical categories.

  RELEVANCE: This article directly addresses power dynamics in defining what counts as philosophy and thus what counts as philosophical literature. For literature review methodology, it exposes how seemingly neutral methodological choices (what sources to include, what languages to prioritize, what standards of argument to apply) can reproduce epistemic hegemony. The proposal for "dialogical exclusive multiplicity" suggests that philosophical literature reviews should not force non-Western traditions into Western frameworks but should recognize multiple autonomous philosophical traditions, each with their own internal standards and development.

  POSITION: Decolonial metaphilosophy critiquing Western philosophical hegemony and advocating for epistemic pluralism.
  },
  keywords = {metaphilosophy, decolonial, non-Western-philosophy, epistemology, Low},
  abstract = {This study critically examines how Western philosophy constructs epistemic hegemony through historical, methodological, and terminological mechanisms, and explores how non-Western traditions such as Confucianism and Daoism can be recognized as complete and authentic without undergoing conceptual subordination. This research is significant as the discourse of global philosophy remains dominated by Western epistemic structures that limit the plurality of rational forms. Employing a qualitative, literature-based approach, this study analyzes key metaphilosophical texts, Jacques Derrida’s theory of deconstruction, and Alain Badiou’s ontology as conceptual tools to trace power relations embedded in the definitions and boundaries of philosophy. The findings reveal that Western philosophy has institutionalized a linear historical narrative, logical-deductive methodological standards, and a Greek-Latin vocabulary as prerequisites for philosophical validity—resulting in the systematic exclusion of non-Western thought. The study further proposes a conceptual framework of dialogical exclusive multiplicity as an alternative for recognizing truth procedures in non-Western traditions as autonomous and equal. The implications of this research open avenues for deconstructing philosophy as the sole legitimate mode of thinking and promote the formation of a more epistemically just global philosophical ecosystem. The originality of this study lies in its critical synthesis of metaphilosophy, deconstruction, and contemporary ontology to construct an alternative paradigm for cross-traditional philosophical inquiry—one based not on inclusion, but on recognition and articulative equality. 
  abstract_source = {s2},
 },
}

@article{Garcia2023pure,
  author = {Garcia, Ernesto V.},
  title = {Pure and Impure Philosophy in Kant's Metaphilosophy},
  journal = {Kantian journal},
  year = {2023},
  doi = {10.5922/0207-6918-2023-3-2},
  note = {
  CORE ARGUMENT: Garcia explores the distinction between "pure" and "impure" (applied, empirical) philosophy in Kant's system, examining four areas: pure vs. applied logic, rational vs. empirical psychology, pure metaphysics of nature vs. physics, and pure morality vs. moral anthropology. He argues that impure philosophy is not inferior or non-philosophical for Kant, but is instrumentally valuable and constitutes an indispensable part of Kant's philosophy in both theoretical and practical senses. This challenges interpretations that see Kant as exclusively concerned with pure philosophical inquiry.

  RELEVANCE: The distinction between pure and impure philosophy raises questions about what kinds of considerations belong in philosophical inquiry and thus what literature is relevant. If philosophy properly includes empirical elements (impure philosophy), then philosophical literature reviews might need to engage with empirical research more extensively than if philosophy is purely a priori. For understanding philosophical methodology, Garcia's analysis suggests that different areas of philosophy may have different relationships to empirical inquiry and thus different methodologies for engaging with literature.

  POSITION: Kantian metaphilosophy emphasizing the complementary roles of pure and impure philosophical inquiry.
  },
  keywords = {metaphilosophy, Kant, a-priori-empirical, Low},
  abstract = {Kant’s metaphilosophy has three main parts: (1) an essentialist project (“What is philosophy?”); (2) a methodological project (“How do we do philosophy?”); and (3) a taxonomic project (“What are the different parts of philosophy, and how are they related?”). This paper focuses on the third project. In particular, it explores one of the most intriguing yet puzzling aspects of Kant’s philosophy, viz. the relationship between what Kant calls ‘pure’ philosophy vs. ‘applied’, ‘empirical’ or what we can broadly refer to as ‘impure’ philosophy. (As we shall see, in order to be able to address this third project, we shall also need to examine the other two projects in detail.) My plan is as follows. First, I discuss four main areas of pure vs. impure philosophy: (i) ‘pure logic’ vs. ‘applied logic’; (ii) ‘rational psychology’ vs. ‘empirical psychology’; (iii) ‘pure metaphysics of nature’ vs. ‘physics’ and (iv) ‘pure morality’ or a ‘metaphysics of morals’ vs. ‘moral anthropology’, ‘practical anthropology’ or ‘applied moral philosophy’. Based on this, I identify four key differences between pure and impure philosophy. Second, I critically examine four different readings of Kant’s views about the status of ‘impure’ philosophy: (a) that it is not genuine philosophy; (b) that it is bad or inferior philosophy; (c) that it is instrumentally valuable; and (d) that it constitutes an indispensable part of Kant’s philosophy, both in a theoretical and practical sense. I argue that Kant is best interpreted as endorsing readings (c) and (d). Third, I offer some concluding remarks.},
  abstract_source = {s2},
}
