@book{thomasson2015ontology,
  author = {Thomasson, Amie L.},
  title = {Ontology Made Easy},
  year = {2014},
  publisher = {Oxford University Press},
  doi = {10.1093/acprof:oso/9780199385119.001.0001},
  note = {
  CORE ARGUMENT: Thomasson defends "easy ontology," arguing that many traditional metaphysical disputes about what exists (numbers, properties, social objects, etc.) can be resolved through straightforward conceptual and empirical inferences rather than through deep metaphysical theorizing. Ontological questions are "easy" when they can be answered by combining semantic competence with relevant empirical information. This approach deflates many metaphysical debates, suggesting that philosophers have often mistaken conceptual or semantic questions for substantive questions about the world's fundamental structure.

  RELEVANCE: Though not explicitly about review methodology, Thomasson's easy ontology has significant implications for how philosophical literature should be surveyed and assessed. If many philosophical debates rest on conceptual confusions or category mistakes rather than genuine disagreements about reality, then literature reviews must include a diagnostic component—identifying which debates are substantive and which rest on pseudo-questions. This affects how gaps in the literature are understood: an apparent gap may reflect not an unsolved problem but a dissolved pseudo-problem. Thomasson's work exemplifies a methodological orientation (neo-Carnapian deflationism) that would shape literature review practices differently than, say, naturalistic metaphysics.

  POSITION: Deflationary/easy ontology. Rejects the idea that ontology involves discovering the deep structure of reality in favor of view that ontological questions are typically answerable through conceptual analysis plus empirical input. Implies that literature reviews in metaphysics should identify which debates are substantive versus merely verbal or conceptual.
  },
  keywords = {metaphilosophy, ontology, deflationism, Medium},
  abstract = {This volume aims to develop the easy approach to ontology, showing how it leads to both a first-order simple realism about the disputed entities and a form of metaontological deflationism that takes ontological disputes themselves to be misguided, since existence questions may be answered by straightforward conceptual and/or empirical work. It also aims to defend the easy approach against a range of objections and to show it to be a viable and attractive alternative to hard ontology.},
  abstract_source = {openalex},
}
