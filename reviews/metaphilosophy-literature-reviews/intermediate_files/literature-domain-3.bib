@article{Safir2025distributive,
  author = {Safir, Abdullah Hasan and McInerney, Kerry and Blackwell, Alan F. and Debnath, Ramit},
  title = {Distributive Epistemic Injustice in AI Ethics: A Co-productionist Account of Global North-South Politics in Knowledge Production},
  journal = {Proceedings of the 2025 ACM Conference on Fairness, Accountability, and Transparency},
  year = {2025},
  doi = {10.1145/3715275.3732136},
  note = {
  CORE ARGUMENT: Bibliometric analysis of AI Ethics publications (1960-2024, n=5755) using co-authorship, co-citation, and co-word analysis. Shows Global North experts legitimize their expertise through citational and collaborative practices that marginalize Global South. Using Jasanoff's co-production theory, argues this creates epistemic injustice distributed through patterned pathways of knowledge production. The global AI Ethics project fails its universalist promise by keeping global majority populations as epistemically marginalized "others."

  RELEVANCE: Empirical demonstration of how citational networks instantiate and distribute epistemic injustice. Relevant to literature review methodology: shows bibliometric patterns reveal power structures in knowledge production. The co-citation analysis demonstrates how repeated citation patterns create epistemic authority for Global North scholars while excluding Global South. Provides quantitative evidence for citational injustice claims. Co-production framework suggests citation networks don't merely reflect but actively produce epistemic hierarchies.

  POSITION: Combines empirical bibliometrics with co-production theory and epistemic injustice framework. Demonstrates systematic, structural citational injustice in emerging field. Decolonial approach.
  },
  keywords = {citational-justice, epistemic-injustice, bibliometrics, AI-ethics, global-south, Medium},
  abstract = {In this study, we analyse a comprehensive database (from 1960 to June 2024) of scientific publications in AI Ethics (n= 5755) using Web of Science (WoS) as a data source, to generate quantitative insights around the research trends within the field. We systematically curate the initial data to conduct a co-authorship and co-citation analysis with highly cited research outputs (n = 500) and a co-word analysis with most relevant research outputs (n = 1000). These bibliometric analyses result in multiple networked visualisations that map the status quo and the nature of current citational and collaborative practices among the experts, institutions and countries involved in global AI Ethics research. Using Sheila Jasanoff’s co-production theory as a conceptual lens, we analyse these findings and show that the experts from the Global North currently legitimise their expertise in AI Ethics through dynamic citational and collaborative practices in knowledge production within the field. Collectively, they shape the discourses and institutional ways of understanding around the ethical development of AI technologies worldwide. This techno-politics of knowledge-making in AI Ethics culminates in creating epistemic injustice for the Global South. Drawing from Miranda Fricker and prominent feminist and postcolonial theorists, we explain how such injustice is produced and distributed through patterned pathways of co-production of AI Ethics. Thus, we show that the global project of AI Ethics fails to deliver its promise to be universally useful by keeping the global majority populations in the Southern regions marginalized as ‘others’.},
  abstract_source = {s2},
}
