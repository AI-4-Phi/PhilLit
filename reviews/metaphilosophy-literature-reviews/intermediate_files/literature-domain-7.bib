@article{khamitov2024academic,
  author = {Khamitov, Nazip},
  title = {Academic integrity as a challenge, demand and will: contexts of philosophical anthropology, ethics and philosophy of education},
  journal = {Filosofiya osvity. Philosophy of Education},
  year = {2024},
  volume = {29},
  number = {2},
  doi = {10.31874/2309-1606-2023-29-2-2},
  note = {
  CORE ARGUMENT: Khamitov develops a philosophical anthropology of academic integrity
  that goes beyond rule-following to examine it as a will or existential commitment.
  Drawing on meta-anthropology, he argues that academic integrity becomes
  unconditional only when driven by the will to knowledge, creativity, and
  co-creation, not merely the will to power or self-preservation. True academic
  integrity requires genuine academic dialogue and cannot exist as a simulacrum of
  rule-compliance. Khamitov examines how this understanding applies during war and
  peace, connecting academic integrity to broader questions of human existence and
  responsibility.

  RELEVANCE: Provides a deeper philosophical anthropology of what academic integrity
  means beyond procedural compliance. Khamitov's emphasis on academic integrity as
  requiring genuine dialogue and will to knowledge (not just power) offers a
  framework for evaluating whether literature review practices reflect authentic
  scholarly engagement or merely strategic positioning. His work suggests that
  responsible scholarship requires not just following norms but cultivating the right
  kind of will and orientation toward knowledge.

  POSITION: Philosophical anthropology/existential approach to academic integrity;
  emphasizes will, dialogue, and authenticity beyond rule-following.
  },
  keywords = {academic-integrity, philosophical-anthropology, dialogue, existentialism, Low},
  abstract = {Academic integrity in education and science is understood as an ability that translates from possible into actual justice in the relations of students, teachers and scientists, their respect for their own dignity and the dignity of colleagues, as well as a focus on sincere creativity and co-creation. Academic integrity is the ability to maintain and develop the reputation of a conscientious, tolerant and creative professional who does not envy the talent of colleagues and does not appropriate their achievements. In the article, academic integrity appears not only as a demand and a challenge, but also as a will. In the coordinates of the methodology of meta-anthropology, it is proven that at the level of the will to self-preservation and procreation, as well as at the level of the will to power, any virtue, including academic and conditional, moreover, its deformations and distortions are possible. Only under the influence of the will to knowledge and creativity of the finite being of a person, which is supplemented by the will to co-creation in the meta-boundary being, academic integrity acquires an unconditional character and naturalness. It has been proven that true academic integrity is impossible without true academic dialogue, without it it turns into a simulacrum. The heuristic meaning of the concept “will to academic integrity” is substantiated. The will to academic integrity is an important component of the will to scientific novelty and actualizes academic writing that has heuristic achievements, is free from plagiarism, does not amount to compilation and is not a fabrication. As an example of the action of such a will in the academic community, the Kyiv anthropological school is presented in its development in the directions of existential anthropology and metaanthropology. The role of academic integrity in conditions of war and peace is shown.},
  abstract_source = {s2},
}

@article{luchies2015towards,
  author = {Luchies, Timothy},
  title = {Towards an Insurrectionary Power/Knowledge: Movement-Relevance, Anti-Oppression, Prefiguration},
  journal = {Social Movement Studies},
  year = {2015},
  volume = {14},
  number = {3},
  pages = {308--329},
  doi = {10.1080/14742837.2014.998643},
  note = {
  CORE ARGUMENT: Building on Foucault, anarchist theory, and anti-racist feminist
  scholarship, Luchies argues that academic knowledge production in social movement
  research is embedded in exploitative and hierarchical power relations. He proposes
  three ethics to counter this: movement-relevant research (confronting extractive
  knowledge-making), anti-oppressive practice (resisting neutral and disinterested
  postures), and prefigurative methods (modeling non-hierarchical authority). These
  ethics together facilitate an "insurrection of knowledges" that challenges the
  regime of truth underlying academic research.

  RELEVANCE: While focused on social movement research, Luchies' critique of
  extractive and hierarchical knowledge production applies to literature review
  practices. His emphasis on movement-relevance raises questions about who benefits
  from scholarly literature reviews and whose interests they serve. The
  anti-oppressive and prefigurative ethics suggest that responsible scholarship
  requires interrogating power relations not just in fieldwork but in how scholars
  engage with and represent others' intellectual work. This challenges individualistic
  virtue approaches by foregrounding systemic power.

  POSITION: Foucauldian/anarchist critique of academic knowledge production;
  emphasizes movement-relevance, anti-oppression, and prefigurative practice as
  alternative ethics.
  },
  keywords = {knowledge-production, power, Foucault, anarchism, social-movements, Low},
  abstract = {Despite ongoing efforts to articulate radical methods and theoretical frameworks for social movement research, the field remains embedded in exploitative, oppressive, and hierarchical modes of knowledge production. Following Foucault, I argue that this is because societies like ours, founded through racial and patriarchal violence, are invested in a regime of truth supportive of that violence. In light of this, I argue that social movements scholars need to adopt a radically different form of knowledge practice. Building on anarchist, anti-racist feminist, and anti-colonial scholarship, this paper begins by analysing how liberalism constrains social justice organizing and how academic norms foreclose accountable social movements scholarship. I then introduce three unique ethics emerging in resistance to this situation: movement-relevant, anti-oppressive, and prefigurative. The first confronts the extractive imperatives of enlightenment truth-making; the second resists its neutral and disinterested tendencies; and the third models a rejection of its hierarchical and exclusive mode of authority. I argue that together they provide scholars with a strategy for re-/orienting their research towards what Foucault theorizes as an insurrection of knowledges. These three ethical frameworks combine to facilitate an insurrectionary power/knowledge that fosters collective struggle as it progressively dismantles the regime of truth underlying social movements research.},
  abstract_source = {openalex},
}
