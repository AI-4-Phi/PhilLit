@article{kubota2019confronting,
  author = {Kubota, Ryuko},
  title = {Confronting Epistemological Racism, Decolonizing Scholarly Knowledge: Race and Gender in Applied Linguistics},
  journal = {Applied Linguistics},
  year = {2019},
  volume = {41},
  number = {5},
  pages = {712--732},
  doi = {10.1093/applin/amz033},
  note = {
  CORE ARGUMENT: Kubota critiques epistemological racism—how racial inequalities
  shape knowledge production and consumption in academe, marginalizing scholarship
  by Global South scholars and women of color. Neoliberal academic competition
  compels scholars of color to become complicit with white Euro-American hegemonic
  knowledge, further perpetuating this hegemony. Kubota argues that epistemological
  antiracism requires validating alternative theories, rethinking citation practices,
  and developing critical reflexivity and accountability. Simply valorizing
  non-European knowledge risks essentialism and overlooking male hegemony; instead,
  black feminist ethics emphasizes personal ethical commitment to antiracism.

  RELEVANCE: Fundamentally challenges the assumption that literature review practices
  are neutral or purely epistemic. Kubota demonstrates how citation practices
  reproduce racial and gender hierarchies by privileging certain voices and
  marginalizing others. This raises critical questions for the project: Do norms of
  "comprehensive" literature review actually privilege Euro-American scholarship?
  How should scholars balance comprehensiveness with actively seeking out
  marginalized voices? Kubota suggests that responsible scholarship requires
  critical reflexivity about whose knowledge is cited and valued, not just formal
  completeness.

  POSITION: Critical/feminist epistemology analyzing how race and gender shape
  knowledge production; emphasizes structural barriers and need for antiracist
  citation practices.
  },
  keywords = {epistemological-racism, knowledge-production, citation-practices, feminism, antiracism, High},
  abstract = {
  abstract_source = {s2},
 Recent scholarship in sociolinguistics and language education has examined how race and language intersect each other and how racism influences linguistic and educational practices. While racism is often conceptualized in terms of individual and institutional injustices, a critical examination of another form of racism—epistemological racism—problematizes how racial inequalities influence our knowledge production and consumption in academe. Highlighting the importance of the intersectional nature of identity categories, this conceptual article aims to draw scholars’ attention on how epistemological racism marginalizes and erases the knowledge produced by scholars in the Global South, women scholars of color, and other minoritized groups. In today’s neoliberal culture of competition, scholars of color are compelled to become complicit with white Euro-American hegemonic knowledge, further perpetuating the hegemony of white knowledge while marginalizing women scholars of color. Valorizing non-European knowledge and collectivity as an alternative framework also risks essentialism and male hegemony. Conversely, the ethics promoted by black feminism emphasizes a personal ethical commitment to antiracism. Epistemological antiracism invites scholars to validate alternative theories, rethink our citation practices, and develop critical reflexivity and accountability.},
}

@article{burrell2022ethics,
  author = {Burrell, Gibson and Hyman, Michael R. and Michaelson, Christopher and Nelson, Julie A. and Taylor, Scott and West, Andrew},
  title = {The Ethics and Politics of Academic Knowledge Production: Thoughts on the Future of Business Ethics},
  journal = {Journal of Business Ethics},
  year = {2022},
  volume = {180},
  number = {3},
  pages = {917--940},
  doi = {10.1007/s10551-022-05243-6},
  note = {
  CORE ARGUMENT: This collaborative essay examines how questions of who produces
  knowledge, what knowledge is produced, and how it is produced are inherently
  ethical and political, not merely technical. The authors argue that the ethical
  responsibility of academic knowledge production goes far beyond conventions around
  research integrity and extends to challenging systemic inequities, power
  structures, and dominant paradigms. They call for greater reflexivity about how
  journal editorial practices, citation networks, and theoretical frameworks shape
  what counts as legitimate knowledge and who counts as a legitimate knower.

  RELEVANCE: Directly addresses the ethics of academic knowledge production at
  structural and institutional levels. The paper's emphasis on journal editing and
  publication practices connects to literature review ethics—what gets reviewed and
  cited is shaped by what gets published and legitimated. The authors' call for
  reflexivity about knowledge production aligns with the project's meta-philosophical
  inquiry into literature review methodology. Their critique suggests that ethical
  literature reviews must attend to power dynamics and not just epistemic
  comprehensiveness.

  POSITION: Critical/structural analysis of knowledge production ethics; emphasizes
  institutional power, editorial practices, and need for reflexivity about who
  produces knowledge.
  },
  keywords = {knowledge-production, academic-ethics, power, reflexivity, editorial-practices, Medium},
  abstract = {To commemorate 40 years since the founding of the Journal of Business Ethics, the editors in chief of the journal have invited the editors to provide commentaries on the future of business ethics. This essay comprises a selection of commentaries aimed at creating dialogue around the theme The Ethics and Politics of Academic Knowledge Production. Questions of who produces knowledge about what, and how that knowledge is produced, are inherent to editing and publishing academic journals. At the Journal of Business Ethics, we understand the ethical responsibility of academic knowledge production as going far beyond conventions around the integrity of the research content and research processes. We are deeply aware that access to resources, knowledge of the rules of the game, and being able to set those rules, are systematically and unequally distributed. One could ask the question “for whom is knowledge now ethical’”? (See the Burrell commentary.) We have a responsibility to address these inequalities and open up our journal to lesser heard voices, ideas, and ways of being. Our six commentators pursue this through various aspects of the ethics and politics of academic knowledge production. Working with MacIntyre’s scheme of practices and institutions, Andrew West provides commentary on the internal good of business ethics learning and education. Inviting us to step out of the cave, Christopher Michaelson urges a clear-eyed, unblinking focus on the purposes and audiences of business ethics scholarship. As developmental editor, Scott Taylor uncovers some of the politics of peer review with the aim of nurturing of unconventional research. Mike Hyman presents his idiosyncratic view of marketing ethics. In the penultimate commentary, Julie Nelson attributes difficulties in the academic positioning of the Business Ethics field to the hegemony of a masculine-centric model of the firm. And finally, Gibson Burrell provides a powerful provocation to go undercover as researcher-investigators in a parallel ethics of the research process.},
  abstract_source = {s2},
}

@incollection{dougherty2018defining,
