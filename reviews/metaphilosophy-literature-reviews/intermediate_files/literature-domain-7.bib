@article{guenin2005intellectual,
  author = {Guenin, Louis M.},
  title = {Intellectual Honesty},
  journal = {Synthese},
  year = {2005},
  volume = {145},
  number = {2},
  pages = {177--232},
  doi = {10.1007/s11229-005-6952-0},
  note = {
  CORE ARGUMENT: Guenin develops a Kantian account of intellectual honesty as an
  exceptionless duty of nondeceptiveness in scholarly communication. Intellectual
  honesty requires not only avoiding false assertions but also refraining from
  deception through implicature, omission, equivocation, and sophistry that affect
  listeners' doxastic states. The kernel of intellectual honesty is a virtuous
  disposition such that when presented with an incentive to deceive, the agent will
  not deceive. For scholarship, this duty is exceptionless—there are no legitimate
  exceptions that would permit scholarly deception.

  RELEVANCE: Directly addresses the ethics of omission in scholarship and provides
  the most rigorous philosophical account of intellectual honesty's demands.
  Guenin's analysis of deception through omission is crucial for evaluating whether
  selective literature engagement constitutes intellectual dishonesty. His claim
  that the duty is exceptionless in scholarship raises the question: does failing
  to engage with relevant literature constitute deception by omission? This provides
  a strong normative framework for literature review ethics.

  POSITION: Deontological/virtue-theoretic account of intellectual honesty as
  exceptionless duty in scholarship; focuses on preventing deception rather than
  promoting positive epistemic goods.
  },
  keywords = {intellectual-honesty, research-ethics, deception, Kantian-ethics, High, INCOMPLETE, no-abstract}
}

@article{miller2022intellectual,
  author = {Miller, Christian B.},
