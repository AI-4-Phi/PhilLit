@article{Gluer2006status,
  author = {Glüer, Kathrin},
  title = {The Status of Charity I: Conceptual Truth or A Posteriori Necessity?},
  journal = {International Journal of Philosophical Studies},
  year = {2006},
  volume = {14},
  number = {3},
  pages = {337--359},
  doi = {10.1080/09672550600858320},
  note = {
  CORE ARGUMENT: Glüer investigates the modal status of the principle of charity, asking whether it is a priori or a posteriori, and what kind of necessity it has. She argues that while Davidson treats charity as a priori and conceptually necessary (constitutive of belief and meaning), there is reason to think of it as an empirical truth. Even if charity is essential to belief and meaning, it might be an a posteriori necessity rather than a conceptual truth, and our ordinary modal intuitions might support only psychological-nomological necessity, not metaphysical necessity.

  RELEVANCE: Addresses fundamental questions about the philosophical status of interpretive principles. If charity is merely psychologically necessary (how we happen to interpret) rather than metaphysically necessary (how we must interpret), this has implications for its normative force in literature review methodology. Suggests that prescriptions about charitable reading need grounding in something other than conceptual necessity.

  POSITION: Defends empiricist/naturalist view of charity against Davidson's a priori conceptual view. Questions whether interpretive principles have the transcendental status often claimed for them.
  },
  keywords = {principle-of-charity, epistemology, modality, Medium},
  abstract = {According to Donald Davidson, linguistic meaning is determined by the principle of charity. Because of Davidson's semantic behaviourism, charity's significance is both epistemic and metaphysical: charity not only provides the radical interpreter with a method for constructing a semantic theory on the basis of his data, but it does so because it is the principle metaphysically determining meaning. In this paper, I assume that charity does determine meaning. On this assumption, I investigate both its epistemic and metaphysical status: is charity a priori or a posteriori? And what kind of necessity does it have? According to Davidson himself, charity is an a priori truth and its necessity is conceptual: it is essential to, or constitutive of, our common concepts of meaning and belief. Not only does this generate tension within Davidson's own, Quine-inspired epistemology, but there is independent reason to think of charity as an empirical truth. Even so, charity might be essential to belief and meaning in the sense of being an a posteriori necessity. I conclude that our ordinary modal intuitions might well support charity's psychological-nomological necessity, but that they do not reach all the way to metaphysical necessity.},
  abstract_source = {openalex},
}

