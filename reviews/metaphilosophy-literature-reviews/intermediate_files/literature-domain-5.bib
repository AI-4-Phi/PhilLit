@article{Lewinski2012paradox,
  author = {Lewiński, Marcin},
  title = {The Paradox of Charity},
  journal = {Informal Logic},
  year = {2012},
  volume = {32},
  number = {4},
  pages = {403--439},
  doi = {10.22329/il.v32i4.3620},
  note = {
  CORE ARGUMENT: Lewiński identifies a fundamental paradox in applying the principle of charity to argumentation: being charitable to one party in a dispute often requires being uncharitable to the other party. Since argumentation involves at least two parties who disagree, an analyst who interprets one party's position in the strongest possible way may be forced to interpret the other party's position as weaker. Lewiński argues this paradox requires significantly limiting the application of charity depending on contextual factors and the analyst's dialectical role.

  RELEVANCE: Crucial for literature review methodology where one is synthesizing positions that are often in disagreement with each other. Raises the question of whether representing competing positions in a literature review requires taking sides or whether a neutral stance is possible. The paradox highlights that "charitable" representation is not simply a matter of being fair to individual authors but involves complex decisions about how to construct the overall dialectical space.

  POSITION: Critical position showing internal tension in charity principles when applied to multi-party argumentation. Relevant to debates about neutrality and positioning in literature reviews.
  },
  keywords = {principle-of-charity, argumentation-theory, dialectics, Medium},
  abstract = {The principle of charity is used in philosophy of language and argumentation theory as an important principle of interpretation which credits speakers with “the best” plausible interpretation of their discourse. I contend that the argumentation account, while broadly advocated, misses the basic point of a dialectical conception which approaches argumentation as discussion between (at least) two parties who disagree over the issue discussed. Therefore, paradoxically, an analyst who is charitable to one discussion party easily becomes uncharitable to the other. To overcome this paradox, I suggest to significantly limit the application of the principle of charity depending on contextual factors.},
  abstract_source = {s2},
}

@article{Prus2023dialectical,
  author = {Pruś, Jakub and Sikora, Piotr},
  title = {The Dialectical Principle of Charity: A Procedure for a Critical Discussion},
  journal = {Argumentation},
  year = {2023},
  volume = {37},
  number = {4},
  pages = {577--600},
  doi = {10.1007/s10503-023-09615-8},
  note = {
  CORE ARGUMENT: Pruś and Sikora propose a modified "dialectical principle of charity" that addresses problems in Davidson's version by incorporating procedures from Ignatius Loyola's presupponendum and pragma-dialectics. Their principle offers concrete steps for arguers to ensure mutual understanding and avoid cognitive biases, emphasizing that charity requires active work by both parties in a discussion, not just the interpreter. This procedural approach makes charity actionable in argumentation contexts.

  RELEVANCE: Offers practical procedures for implementing charitable interpretation in scholarly contexts. Relevant to literature review methodology as it provides concrete steps for ensuring one has accurately understood positions before critiquing them. The emphasis on procedural safeguards against cognitive bias is particularly relevant given concerns about selective application of charity. However, literature reviews differ from live debates in that authors cannot correct misunderstandings.

  POSITION: Pragmatic/procedural approach to charity, modifying Davidson with pragma-dialectical insights. Focuses on making charity operational in actual argumentative practice.
  },
  keywords = {principle-of-charity, argumentation-theory, pragma-dialectics, Medium},
  abstract = {This paper aims to discuss a well-known concept from argumentation theory, namely the principle of charity. It will show that this principle, especially in its contemporary version as formulated by Donald Davidson, meets with some serious problems. Since we need the principle of charity in any kind of critical discussion, we propose the way of modifying it according to the presupponendum—the rule written in the sixteenth century by Ignatius Loyola. While also corresponding with pragma-dialectical rules, it also provides additional content. This will be termed the dialectical principle of charity, and it offers a few steps to be performed during an argument in order to make sure that the participants understand each other well and are not deceived by any cognitive bias. The meaning of these results could be of great significance for argumentation theory, pragma-dialectics and the practice of public discourse as it enhances the principle of charity and makes it easier to apply in argumentation.},
  abstract_source = {s2},
}

